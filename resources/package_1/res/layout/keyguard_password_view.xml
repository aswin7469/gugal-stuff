<?xml version='1.0' encoding='utf-8' ?>
<com.android.keyguard.KeyguardPasswordView android:gravity="bottom"
                      android:layout_gravity="bottom|center"
                      android:orientation="vertical"
                      android:id="@id/keyguard_password_view"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      androidprv:layout_maxWidth="@dimen/keyguard_security_width" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:androidprv="http://schemas.android.com/apk/res-auto">
  <include layout="@layout/keyguard_bouncer_message_area" />
  <com.android.systemui.bouncer.ui.BouncerMessageView android:orientation="vertical"
                        android:id="@id/bouncer_message_view"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="noHideDescendants" />
  <Space android:layout_width="fill_parent"
         android:layout_height="0.0dp"
         android:layout_weight="7.0" />
