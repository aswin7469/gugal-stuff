<?xml version='1.0' encoding='utf-8' ?>
<com.android.keyguard.KeyguardSimPukView android:layout_gravity="bottom|center"
                      android:orientation="vertical"
                      android:id="@id/keyguard_sim_puk_view"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      app:layout_maxWidth="@dimen/keyguard_security_width" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:androidprv="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res-auto">
  <include layout="@layout/keyguard_bouncer_message_area" />
  <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="fill_parent"
                        android:layout_height="0.0dp"
                        android:layout_weight="1.0"
                        android:layoutDirection="ltr">
    <LinearLayout android:gravity="center_horizontal"
                  android:orientation="vertical"
                  android:id="@id/pin_area"
                  android:paddingTop="@dimen/num_pad_entry_row_margin_bottom"
                  android:paddingBottom="@dimen/num_pad_entry_row_margin_bottom"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintBottom_toTopOf="@id/flow1"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent">
      <ImageView android:layout_gravity="center_horizontal"
                 android:id="@id/keyguard_sim"
                 android:layout_width="40.0dp"
                 android:layout_height="40.0dp"
                 android:src="@drawable/ic_lockscreen_sim"
                 app:tint="@color/background_protected" />
      <include android:layout_gravity="center_horizontal"
               android:id="@id/keyguard_esim_area"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               layout="@layout/keyguard_esim_area" />
      <com.android.keyguard.PasswordTextView android:layout_gravity="center_horizontal"
                            android:id="@id/pukEntry"
                            android:layout_width="@dimen/keyguard_security_width"
                            android:layout_height="@dimen/keyguard_password_height"
                            android:contentDescription="@string/keyguard_accessibility_sim_pin_area"
                            app:scaledTextSize="@integer/scaled_password_text_size"
                            style="@style/Widget.TextView.Password" />
    </LinearLayout>
    <androidx.constraintlayout.helper.widget.Flow android:orientation="horizontal"
                          android:id="@id/flow1"
                          android:clipChildren="false"
                          android:clipToPadding="false"
                          android:layout_width="0.0dp"
                          android:layout_height="0.0dp"
                          app:constraint_referenced_ids="key1,key2,key3,key4,key5,key6,key7,key8,key9,delete_button,key0,key_enter"
                          app:flow_horizontalGap="@dimen/num_pad_key_margin_end"
                          app:flow_horizontalStyle="packed"
                          app:flow_maxElementsWrap="3"
                          app:flow_verticalBias="1.0"
                          app:flow_verticalGap="@dimen/num_pad_entry_row_margin_bottom"
                          app:flow_verticalStyle="packed"
                          app:flow_wrapMode="aligned"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintEnd_toEndOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toBottomOf="@id/pin_area" />
    <com.android.keyguard.NumPadButton android:id="@id/delete_button"
                          android:layout_width="0.0dp"
                          android:layout_height="0.0dp"
                          android:contentDescription="@string/keyboardview_keycode_delete"
                          android:accessibilityTraversalBefore="@id/key0"
                          style="@style/NumPadKey.Delete" />
    <com.android.keyguard.NumPadButton android:id="@id/key_enter"
                          android:layout_width="0.0dp"
                          android:layout_height="0.0dp"
                          android:contentDescription="@string/keyboardview_keycode_enter"
                          style="@style/NumPadKey.Enter" />
    <com.android.keyguard.NumPadKey android:id="@id/key1"
                          android:layout_width="0.0dp"
                          android:layout_height="0.0dp"
                          android:accessibilityTraversalBefore="@id/key2"
                          app:digit="1"
                          app:textView="@id/pukEntry" />
    <com.android.keyguard.NumPadKey android:id="@id/key2"
                          android:layout_width="0.0dp"
                          android:layout_height="0.0dp"
                          android:accessibilityTraversalBefore="@id/key3"
                          app:digit="2"
                          app:textView="@id/pukEntry" />
    <com.android.keyguard.NumPadKey android:id="@id/key3"
                          android:layout_width="0.0dp"
                          android:layout_height="0.0dp"
                          android:accessibilityTraversalBefore="@id/key4"
                          app:digit="3"
                          app:textView="@id/pukEntry" />
    <com.android.keyguard.NumPadKey android:id="@id/key4"
                          android:layout_width="0.0dp"
                          android:layout_height="0.0dp"
                          android:accessibilityTraversalBefore="@id/key5"
                          app:digit="4"
                          app:textView="@id/pukEntry" />
    <com.android.keyguard.NumPadKey android:id="@id/key5"
                          android:layout_width="0.0dp"
                          android:layout_height="0.0dp"
                          android:accessibilityTraversalBefore="@id/key6"
                          app:digit="5"
                          app:textView="@id/pukEntry" />
    <com.android.keyguard.NumPadKey android:id="@id/key6"
                          android:layout_width="0.0dp"
                          android:layout_height="0.0dp"
                          android:accessibilityTraversalBefore="@id/key7"
                          app:digit="6"
                          app:textView="@id/pukEntry" />
    <com.android.keyguard.NumPadKey android:id="@id/key7"
                          android:layout_width="0.0dp"
                          android:layout_height="0.0dp"
                          android:accessibilityTraversalBefore="@id/key8"
                          app:digit="7"
                          app:textView="@id/pukEntry" />
    <com.android.keyguard.NumPadKey android:id="@id/key8"
                          android:layout_width="0.0dp"
                          android:layout_height="0.0dp"
                          android:accessibilityTraversalBefore="@id/key9"
                          app:digit="8"
                          app:textView="@id/pukEntry" />
    <com.android.keyguard.NumPadKey android:id="@id/key9"
                          android:layout_width="0.0dp"
                          android:layout_height="0.0dp"
                          android:accessibilityTraversalBefore="@id/delete_button"
                          app:digit="9"
                          app:textView="@id/pukEntry" />
    <com.android.keyguard.NumPadKey android:id="@id/key0"
                          android:layout_width="0.0dp"
                          android:layout_height="0.0dp"
                          android:accessibilityTraversalBefore="@id/key_enter"
                          app:digit="0"
                          app:textView="@id/pukEntry" />
  </androidx.constraintlayout.widget.ConstraintLayout>
  <include android:gravity="center_horizontal"
           android:layout_gravity="bottom|center"
           android:orientation="vertical"
           android:id="@id/keyguard_selector_fade_container"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/keyguard_eca_top_margin"
           android:layout_marginBottom="2.0dp"
           layout="@layout/keyguard_eca" />
</com.android.keyguard.KeyguardSimPukView>