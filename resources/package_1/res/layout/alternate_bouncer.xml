<?xml version='1.0' encoding='utf-8' ?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@id/alternate_bouncer"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sysui="http://schemas.android.com/apk/res-auto">
  <com.android.systemui.scrim.ScrimView android:id="@id/alternate_bouncer_scrim"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:importantForAccessibility="no"
                        sysui:ignoreRightInset="true" />
  <LinearLayout android:gravity="center_horizontal"
                android:layout_gravity="center|top"
                android:orientation="vertical"
                android:id="@id/alternate_bouncer_message_area_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/status_bar_height">
    <com.android.keyguard.AuthKeyguardMessageArea android:ellipsize="marquee"
                          android:gravity="center"
                          android:id="@id/alternate_bouncer_message_area"
                          android:focusable="true"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/keyguard_lock_padding"
                          android:singleLine="true"
                          style="@style/Keyguard.TextView" />
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>