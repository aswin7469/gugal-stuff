<?xml version='1.0' encoding='utf-8' ?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@id/presentation"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
  <com.android.keyguard.KeyguardStatusView android:layout_gravity="center"
                        android:orientation="vertical"
                        android:id="@id/clock"
                        android:layout_width="0.0dp"
                        android:layout_height="0.0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
    <include android:id="@id/keyguard_clock_container"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             layout="@layout/keyguard_clock_switch" />
  </com.android.keyguard.KeyguardStatusView>
</androidx.constraintlayout.widget.ConstraintLayout>